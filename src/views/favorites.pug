doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="/css/styles.css")
    title Favorites
  body 
  a(href="/dashboard").scrapper__back Back
  .container__favorites
    if favorites 
        each favorite in favorites
          div.product
            p= favorite.name
            p= favorite.price
            a(href=`${favorite.url}`) url
    else
      p No favorites yet